<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/list_backg_all_redus"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgv_gym_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:src="@drawable/t"
                android:layout_marginStart="10dp"
                app:civ_background_color="#060f14"
                app:civ_border_color="#044a42"
                app:civ_border_width="2dp"
                 />

            <TextView
                android:id="@+id/txtv_gym_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="35dp"
                android:text="gym name"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#3fb5a6"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>





    </LinearLayout>

</LinearLayout>