<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imgv_plan_lock"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="-30dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/plan_lock"
                    android:elevation="1dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/list_backg"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plan Name"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="#3fb5a6"/>

                    <TextView
                        android:id="@+id/txtv_plan_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="plan name"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#3fb5a6"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plan Descrabtion"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="#3fb5a6"/>

                    <TextView
                        android:id="@+id/txtv_plan_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="plan descrabtion"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#3fb5a6"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plan Time Duration"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="#3fb5a6"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/txtv_plan_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#3fb5a6"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Month"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="12sp"
                            android:textColor="#3fb5a6"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_horizontal">


                        <TextView
                            android:id="@+id/txtv_plan_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#3fb5a6"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="12sp"
                            android:textColor="#3fb5a6"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        >


                    <TextView
                        android:id="@+id/txtv_plan_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="1dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#3fb5a6"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="12sp"
                            android:textColor="#3fb5a6"/>



                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



</LinearLayout>